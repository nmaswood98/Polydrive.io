
       this.players.forEach(function(car){
            car.followerArray.forEach(function(carFollower){

                if (car.moving){
                    var angle = Math.atan2((car.follower.position.y - car.position.y), (car.follower.position.x - car.position.x)) - (Math.PI);
                 //   console.log(car.id);
                    this.moveCar(car,angle,4);
                }

            }.bind(this));
    }.bind(this));

        

            this.otherCars.forEach(function(car){
                if (car.moving){
                var angle = Math.atan2((car.follower.position.y - car.position.y), (car.follower.position.x - car.position.x)) - (Math.PI);
             //   console.log(car.id);
                this.moveCar(car,angle,4);
            }

            }.bind(this));
